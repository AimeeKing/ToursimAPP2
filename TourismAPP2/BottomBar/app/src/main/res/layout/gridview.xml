<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gridview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="0dp"
                android:src="@drawable/class_out"
                android:scaleType="centerInside"
                android:id="@+id/img_1_1"/>
            <TextView
                android:id="@+id/text_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级出游"
                style="@style/home_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="0dp"
                android:src="@drawable/bick_hide"
                android:scaleType="centerInside"
                android:id="@+id/img_1_2"/>
            <TextView
                android:id="@+id/text_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周边出游"
                style="@style/home_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="0dp"
                android:src="@drawable/child_out"
                android:scaleType="centerInside"
                android:id="@+id/img_2_1"/>
            <TextView
                android:id="@+id/text_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="儿童出游"
                style="@style/home_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="0dp"
                android:src="@drawable/play_myself"
                android:scaleType="centerInside"
                android:id="@+id/img_2_2"/>
            <TextView
                android:id="@+id/text_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手工DIY"
                style="@style/home_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="0dp"
                android:src="@drawable/play"
                android:scaleType="centerInside"
                android:id="@+id/img_3_1"/>
            <TextView
                android:id="@+id/text_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="演出展览"
                style="@style/home_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="0dp"
                android:src="@drawable/knowledge"
                android:scaleType="centerInside"
                android:id="@+id/img_3_2"/>
            <TextView
                android:id="@+id/text_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="知识库"
                style="@style/home_text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>