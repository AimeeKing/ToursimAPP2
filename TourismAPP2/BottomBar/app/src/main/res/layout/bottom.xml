<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/icons"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/home"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/id_tab_home_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/shouye"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitXY"
    />

        <TextView
            android:id="@+id/id_tab_home_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/icon_default" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/activity"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/id_tab_act_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/huodong" />

        <TextView
            android:id="@+id/id_tab_act_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textColor="@color/icon_default" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/topic"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/id_tab_top_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/huati" />

        <TextView
            android:id="@+id/id_tab_top_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圈子"
            android:textColor="@color/icon_default" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/my"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/id_tab_my_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/wode" />

        <TextView
            android:id="@+id/id_tab_my_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@color/icon_default" />
    </LinearLayout>
</LinearLayout>
