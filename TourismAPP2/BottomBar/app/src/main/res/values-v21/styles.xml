<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>
    <style name="MySpinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
    <item name="android:background">?android:selectableItemBackground</item>
    <item name="android:dropDownSelector">?android:selectableItemBackground</item>
    <item name="android:divider">@null</item>
    <item name="android:overlapAnchor">true</item>
    </style>
    <style name="home_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!--  textstyle 用在menu上
      submitstyle 用在用户写的字上-->
    <style name="textstyle">
        <item name="android:textSize">23dp</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="submitstyle">
        <item name="android:textSize">23dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="Mybutton" parent ="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/pressed</item>
        <item name="colorButtonNormal">@color/orange</item>

    </style>


    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/green_blue</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="actionMenuTextColor">@color/green_blue</item>
        <item name="android:actionMenuTextAppearance">@style/textstyle</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="colorAccent">@color/white</item>
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="tabBackground">@drawable/tab_background</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
